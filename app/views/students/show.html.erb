<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Student Header -->
    <div class="bg-white rounded-2xl shadow-md p-6 mb-8 border border-rose-100">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-rose-800"><%= @student.first_name %> <%= @student.last_name %></h1>
        </div>
        <div class="flex gap-3">
          <%= link_to "New Note", new_note_path, class: "px-4 py-2 text-rose-600 hover:text-rose-700 border border-rose-200 rounded-md hover:bg-rose-50 transition duration-200" %>
        </div>
      </div>
    </div>
    <div class="w-full bg-white rounded-2xl shadow-md p-6 mb-8 border border-rose-100">
      <img 
        src="<%= @student.photo_url %>"
        alt="Student Photo" 
        class="mx-auto rounded-lg mb-4" 
        style="width: 50%;"
      />
    </div>
    <!-- Student Information Section -->
    <div class="bg-white rounded-2xl shadow-md p-6 border border-rose-100 mb-8">
      <h2 class="text-2xl font-semibold text-rose-700 mb-6">Student Information</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div class="bg-teal-50 rounded-xl p-4 border border-teal-200">
          <h3 class="text-lg font-semibold text-teal-800">Teachers (<%= @student.active_classroom.name %> <%= @student.active_classroom.school_year %>)</h3>
          <ul class="space-y-4">
            <% @student.active_classroom.teachers.each do |teacher| %>
              <li class="bg-white rounded-lg shadow p-4 border border-teal-100">
                <%= link_to teacher_path(teacher) do %>
                  <h4 class="text-teal-700 font-bold"><%= teacher.first_name %> <%= teacher.last_name %></h4>
                  <p class="text-teal-600"><strong>Email:</strong> <%= teacher.email_address %></p>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-2xl shadow-md p-6 border border-rose-100 mb-8">
      <h2 class="text-2xl font-semibold text-rose-700 mb-6">Notes</h2>
      <ul class="space-y-4">
        <% @student.notes.each do |note| %>
          <li class="bg-white rounded-lg shadow p-4 border border-rose-100">
            <%= link_to note_path(note) do %>
              <p class="text-rose-600"><%= note.content %></p>
              <p>Created by <%= note.author.first_name %> <%= note.author.last_name %> at <%= note.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
