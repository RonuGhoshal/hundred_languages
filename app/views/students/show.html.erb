<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-md p-6 border border-rose-100">
    <div class="flex flex-wrap">
      <div class="flex-1 min-w-[200px] border border-rose-200 rounded-lg m-2 p-4">
        <!-- Column 1 content -->
        <h2 class="text-2xl font-semibold text-rose-700 mb-4">Student Information</h2>
        <p class="text-rose-600"><strong>Name:</strong> <%= @student.first_name %> <%= @student.last_name %></p>
        <p class="text-rose-600"><strong>Classrooms:</strong> <%= @student.classrooms.map(&:name).join(', ') %></p>
        <h3 class="text-lg font-medium text-rose-700 mt-4">Contacts</h3>
        <ul class="list-disc list-inside text-rose-600">
          <% @student.contacts.each do |contact| %>
            <li><strong><%= contact.name %></strong>: <%= contact.phone %>, <%= contact.email %></li>
          <% end %>
        </ul>
      </div>
      <div class="flex-1 min-w-[200px] border border-rose-200 rounded-lg m-2 p-4 text-center">
        <!-- Column 2 content -->
        <h2 class="text-2xl font-semibold text-rose-700 mb-4">Student Photo</h2>
        <div class="w-36 h-36 bg-gray-100 border border-rose-200 rounded-full mx-auto flex items-center justify-center">
          <!-- Placeholder for student photo -->
          <p class="text-rose-600">Photo</p>
        </div>
      </div>
    </div>
  </div>
</div>
