<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8 space-y-8">
  <%# Header Section %>
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Students</h1>
  </div>

  <%# Students Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @students.each do |student| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="p-6">
          <div class="flex justify-between items-start">
            <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= student.first_name %> <%= student.last_name %></h2>
          </div>
          <div class="mt-4 space-y-2">
            <% if student.active_classroom %>
              <div class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <div>Current Class: <%= student.active_classroom.name %></div>
              </div>
            <% end %>
            <% if student.teachers.any? %>
              <div class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <div><%= student.teachers.map(&:full_name).join(', ') %></div>
              </div>
            <% end %>
          </div>
          <div class="mt-6 flex space-x-3">
            <%= link_to "View", student_path(student), class: "flex-1 text-center bg-teal-500 hover:bg-teal-600 text-white font-medium py-2 px-4 rounded" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%# Empty State %>
  <% if @students.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
      <h3 class="mt-2 text-lg font-medium text-gray-900">No students yet</h3>
      <p class="mt-1 text-gray-500">Get started by adding a new student.</p>
      <div class="mt-6">
        <%= link_to "New Student", new_student_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-500 hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500" %>
      </div>
    </div>
  <% end %>
</div>
