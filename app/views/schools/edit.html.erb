<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-8">
    <h1 class="text-2xl font-bold text-rose-800 mb-6">Edit School Information</h1>

    <%= tag.div(flash[:alert], class: "text-red-600 mb-4") if flash[:alert] %>
    <%= tag.div(flash[:notice], class: "text-green-600 mb-4") if flash[:notice] %>

    <%= form_with model: @school, class: "space-y-6" do |form| %>
      <div class="space-y-4">
        <div class="grid grid-cols-1 gap-4">
          <%= form.text_field :name, required: true, placeholder: "School Name", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          <%= form.text_field :address, required: true, placeholder: "School Address", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          <div class="grid grid-cols-2 gap-4">
            <%= form.text_field :city, required: true, placeholder: "City", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
            <%= form.text_field :state, required: true, placeholder: "State", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <%= form.text_field :zip, required: true, placeholder: "ZIP Code", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
            <%= form.text_field :phone, required: true, placeholder: "Phone Number", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          </div>
        </div>
      </div>

      <div class="flex justify-between">
        <%= link_to "Cancel", root_path, class: "px-4 py-2 text-rose-600 hover:text-rose-700" %>
        <%= form.submit "Update School", class: "bg-rose-600 text-white py-2 px-4 rounded-md hover:bg-rose-700 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div> 