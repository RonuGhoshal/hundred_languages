<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-2xl shadow-md p-6 border border-rose-100">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-3xl font-bold text-rose-800"><%= @teacher.first_name %> <%= @teacher.last_name %></h1>
        <p class="text-rose-600 mt-1">Email: <%= @teacher.email_address %></p>
      </div>
      <div class="flex gap-3">
        <%= link_to "Edit Teacher", edit_teacher_path(@teacher), class: "px-4 py-2 text-rose-600 hover:text-rose-700 border border-rose-200 rounded-md hover:bg-rose-50 transition duration-200" %>
      </div>
    </div>
  </div>

  <%= render "classrooms/classrooms", classrooms: @teacher.classrooms %>
</div>