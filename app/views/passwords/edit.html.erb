<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-8">
    <h1 class="text-2xl font-bold text-rose-800 mb-6">
      <%= @is_invitation ? "Set Up Your Account" : "Reset Your Password" %>
    </h1>

    <%= tag.div(flash[:alert], class: "text-red-600 mb-4") if flash[:alert] %>
    <%= tag.div(flash[:notice], class: "text-green-600 mb-4") if flash[:notice] %>

    <%= form_with url: password_path(params[:token]), method: :patch, class: "space-y-6" do |form| %>
      <% if @is_invitation %>
        <p class="text-rose-700 mb-4">
          Welcome to Hundred Languages! Please set up your password to complete your account setup.
        </p>
      <% else %>
        <p class="text-rose-700 mb-4">
          Please enter your new password below.
        </p>
      <% end %>

      <div>
        <%= form.label :password, "New Password", class: "block text-sm font-medium text-rose-700 mb-1" %>
        <%= form.password_field :password, required: true, class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
      </div>

      <div>
        <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-rose-700 mb-1" %>
        <%= form.password_field :password_confirmation, required: true, class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
      </div>

      <%= form.submit @is_invitation ? "Set Up Account" : "Reset Password", class: "w-full bg-rose-600 text-white py-2 px-4 rounded-md hover:bg-rose-700 transition duration-200" %>
    <% end %>
  </div>
</div>
