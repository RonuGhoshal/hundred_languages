<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8 space-y-8">
  <%# Header Section %>
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Classrooms</h1>
    <%= link_to "New Classroom", new_classroom_path, class: "bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
  <%# Classrooms Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @classrooms.each do |classroom| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="p-6">
          <div class="flex justify-between items-start">
            <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= classroom.name %> <%= classroom.school_year %></h2>
          </div>
          <div class="mt-4 space-y-2">
            <% classroom.teachers.each do |teacher| %>
              <div class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span><%= teacher.first_name %> <%= teacher.last_name %></span>
              </div>
            <% end %>
          </div>
          <div class="mt-6 flex space-x-3">
            <%= link_to "View", classroom_path(classroom), class: "flex-1 text-center bg-teal-500 hover:bg-teal-600 text-white font-medium py-2 px-4 rounded" %>
            <%= link_to "Edit", edit_classroom_path(classroom), class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
