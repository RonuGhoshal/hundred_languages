<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Classroom Header -->
    <div class="bg-white rounded-2xl shadow-md p-6 mb-8 border border-rose-100">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-rose-800"><%= @classroom.name %></h1>
          <p class="text-rose-600 mt-1">School Year: <%= @classroom.school_year %></p>
        </div>
        <div class="flex gap-3">
          <%= link_to "Edit Classroom", edit_classroom_path(@classroom), class: "px-4 py-2 text-rose-600 hover:text-rose-700 border border-rose-200 rounded-md hover:bg-rose-50 transition duration-200" %>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
      <a href="#" class="bg-white shadow-md hover:shadow-lg rounded-2xl p-6 text-center transition duration-200 border border-rose-200">
        <h2 class="text-rose-700 font-semibold text-xl mb-2">â• Add Student</h2>
        <p class="text-sm text-rose-500">Enroll a new student</p>
      </a>
      <a href="#" class="bg-white shadow-md hover:shadow-lg rounded-2xl p-6 text-center transition duration-200 border border-rose-200">
        <h2 class="text-rose-700 font-semibold text-xl mb-2">ğŸ“ New Note</h2>
        <p class="text-sm text-rose-500">Create a classroom note</p>
      </a>
      <a href="#" class="bg-white shadow-md hover:shadow-lg rounded-2xl p-6 text-center transition duration-200 border border-rose-200">
        <h2 class="text-rose-700 font-semibold text-xl mb-2">ğŸ“Š Reports</h2>
        <p class="text-sm text-rose-500">View classroom analytics</p>
      </a>
    </div>

    <!-- Teachers Section -->
    <div class="bg-white rounded-2xl shadow-md p-6 border border-rose-100 mb-8">
      <h2 class="text-2xl font-semibold text-rose-700 mb-6">Teachers</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @classroom.teachers.each do |teacher| %>
          <%= link_to teacher_path(teacher) do %>
            <div class="bg-blue-50 rounded-xl p-4 border border-blue-200 hover:bg-blue-100 transition duration-200">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-lg font-semibold text-blue-800">
                    <%= teacher.first_name %> <%= teacher.last_name %>
                  </h3>
                  <p class="text-sm text-blue-600">
                    Email: <%= teacher.email_address %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Students Section -->
    <div class="bg-white rounded-2xl shadow-md p-6 border border-rose-100">
      <h2 class="text-2xl font-semibold text-rose-700 mb-6">Students</h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @classroom.students.each do |student| %>
            <div class="bg-teal-50 rounded-xl p-4 border border-teal-200 hover:bg-teal-100 transition duration-200">
              <%= link_to student_path(student), class: "block" do %>
                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="text-lg font-semibold text-teal-800">
                      <%= student.first_name %> <%= student.last_name %>
                    </h3>
                    <p class="text-sm text-teal-600">
                      DOB: <%= student.dob.strftime("%B %d, %Y") %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
