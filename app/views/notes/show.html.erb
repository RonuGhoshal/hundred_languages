<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Note Header -->
    <div class="bg-white rounded-2xl shadow-md p-6 mb-8 border border-rose-100">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-rose-800">Note Details</h1>
          <p class="text-rose-600 mt-2">
            Created by <%= @note.author.first_name %> <%= @note.author.last_name %> on 
            <%= @note.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
        </div>
        <div class="flex gap-3">
          <%= link_to "Edit Note", edit_note_path(@note), class: "px-4 py-2 text-rose-600 hover:text-rose-700 border border-rose-200 rounded-md hover:bg-rose-50 transition duration-200" %>
          <%= link_to "Back to Notes", notes_path, class: "px-4 py-2 text-rose-600 hover:text-rose-700 border border-rose-200 rounded-md hover:bg-rose-50 transition duration-200" %>
        </div>
      </div>
    </div>

    <!-- Note Content -->
    <div class="bg-white rounded-2xl shadow-md p-6 mb-8 border border-rose-100">
      <div class="prose max-w-none">
        <div class="text-lg text-gray-700 whitespace-pre-wrap">
          <%= @note.content %>
        </div>
      </div>
    </div>

    <!-- Related Students -->
    <div class="bg-white rounded-2xl shadow-md p-6 border border-rose-100">
      <h2 class="text-2xl font-semibold text-rose-700 mb-6">Related Students</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @note.students.each do |student| %>
          <div class="bg-teal-50 rounded-xl p-4 border border-teal-200 hover:shadow-md transition duration-200">
            <%= link_to student_path(student), class: "block" do %>
              <h3 class="text-lg font-semibold text-teal-800">
                <%= student.first_name %> <%= student.last_name %>
              </h3>
              <p class="text-teal-600">
                <%= student.active_classroom.name %> <%= student.active_classroom.school_year %>
              </p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
