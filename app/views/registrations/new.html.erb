<div class="min-h-screen bg-rose-50 py-10 px-4 sm:px-8">
  <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-8">
    <h1 class="text-2xl font-bold text-rose-800 mb-6">Create Your School Account</h1>

    <%= tag.div(flash[:alert], class: "text-red-600 mb-4") if flash[:alert] %>
    <%= tag.div(flash[:notice], class: "text-green-600 mb-4") if flash[:notice] %>

    <%= form_with model: @teacher, url: registration_path, class: "space-y-6" do |form| %>
      <div class="space-y-4">
        <h2 class="text-lg font-semibold text-rose-700">School Information</h2>
        <div class="grid grid-cols-1 gap-4">
          <%= form.fields_for :school do |school_form| %>
            <%= school_form.text_field :name, required: true, placeholder: "School Name", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
            <%= school_form.text_field :address, required: true, placeholder: "School Address", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
            <div class="grid grid-cols-2 gap-4">
              <%= school_form.text_field :city, required: true, placeholder: "City", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
              <%= school_form.text_field :state, required: true, placeholder: "State", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <%= school_form.text_field :zip, required: true, placeholder: "ZIP Code", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
              <%= school_form.text_field :phone, required: true, placeholder: "Phone Number", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="text-lg font-semibold text-rose-700">Admin Account Information</h2>
        <div class="grid grid-cols-1 gap-4">
          <%= form.text_field :first_name, required: true, placeholder: "First Name", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          <%= form.text_field :last_name, required: true, placeholder: "Last Name", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          <%= form.email_field :email_address, required: true, placeholder: "Email Address", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          <%= form.password_field :password, required: true, placeholder: "Password", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
          <%= form.password_field :password_confirmation, required: true, placeholder: "Confirm Password", class: "w-full px-3 py-2 border border-rose-200 rounded-md" %>
        </div>
      </div>

      <%= form.submit "Create School Account", class: "w-full bg-rose-600 text-white py-2 px-4 rounded-md hover:bg-rose-700 transition duration-200" %>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "Already have an account? Sign in.", new_session_path, class: "text-rose-600 hover:text-rose-700" %>
    </div>
  </div>
</div>