<div class="bg-rose-50 rounded-lg p-4 border border-rose-200 teacher-row">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= label_tag "teachers[][email_address]", "Email", class: "block text-sm font-medium text-rose-700 mb-1" %>
      <%= email_field_tag "teachers[][email_address]", "", class: "w-full rounded-lg border-rose-200 focus:border-rose-300 focus:ring focus:ring-rose-200 focus:ring-opacity-50", required: true %>
    </div>
    <div>
      <%= label_tag "teachers[][first_name]", "First Name", class: "block text-sm font-medium text-rose-700 mb-1" %>
      <%= text_field_tag "teachers[][first_name]", "", class: "w-full rounded-lg border-rose-200 focus:border-rose-300 focus:ring focus:ring-rose-200 focus:ring-opacity-50", required: true %>
    </div>
    <div>
      <%= label_tag "teachers[][last_name]", "Last Name", class: "block text-sm font-medium text-rose-700 mb-1" %>
      <%= text_field_tag "teachers[][last_name]", "", class: "w-full rounded-lg border-rose-200 focus:border-rose-300 focus:ring focus:ring-rose-200 focus:ring-opacity-50", required: true %>
    </div>
  </div>
  <div class="mt-2 flex justify-end">
    <button type="button" 
            data-action="click->home#removeTeacherRow"
            class="text-red-600 hover:text-red-700 text-sm">
      Remove
    </button>
  </div>
</div>
